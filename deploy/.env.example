MYSQL_ROOT_PASSWORD=changeme
MYSQL_DATABASE=dp
MYSQL_USER=dp
MYSQL_PASSWORD=changeme

# ===================
# Drop Project
# ===================
SPRING_PROFILES_ACTIVE=mysql
SPRING_CONFIG_ADDITIONALLOCATION=/usr/src/app/conf/
DP_CONFIG_LOCATION=/usr/src/app/conf/
DB_URL=jdbc:mysql://db:3306/dp?connectTimeout=0&socketTimeout=0&autoReconnect=true&useUnicode=true&characterEncoding=UTF-8&allowMultiQueries=true&useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
DB_USERNAME=dp
DB_PASSWORD=changeme

# Directory for log files (sets Logback's LOG_PATH used in logback-spring.xml; only applies in production, not the dev profile)
LOGGING_FILE_PATH=/usr/src/app/logs

# ===================
# phpMyAdmin
# ===================
PMA_HOST=db

