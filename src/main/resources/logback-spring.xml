<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Include Spring Boot's base configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Suppress logback internal debug messages -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%clr([%d{yy-MM-dd HH:mm:ss}]){faint} %clr([%-5.5p]) %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n%wEx</pattern>
        </encoder>
    </appender>

    <appender name="RollingFile"  class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/dp.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{yy-MM-dd HH:mm:ss.SSS} %5p ${PID:- } --- [%15.15t] %-40.40logger{39} : %m%n%wEx</Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 50 MegaBytes -->
            <fileNamePattern>${LOG_PATH}/archived/dp-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!-- dev: console only | production: file only -->
    <springProfile name="dev">
        <root level="info">
            <appender-ref ref="Console" />
        </root>
    </springProfile>
    <springProfile name="!dev">
        <root level="info">
            <appender-ref ref="RollingFile" />
        </root>
    </springProfile>

    <!-- Suppress noisy loggers -->
    <logger name="org.apache.http" level="WARN" />
    <logger name="httpclient.wire" level="WARN" />

</configuration>